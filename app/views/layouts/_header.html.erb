<%# Header for all app pages%>

<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if teacher_logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Dashboard", current_teacher %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", teacherlogout_path, method: 'delete' %>
              </li>
            </ul>
          </li>
        <% elsif student_logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Dashboard", current_student %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", studentlogout_path, method: 'delete' %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Teacher Log in", teacherlogin_path %></li>
          <li><%= link_to "Student Log in", studentlogin_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>