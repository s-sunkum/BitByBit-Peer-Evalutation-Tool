<%# Class roster for teacher%>
<h2>Class Roster</h2>
<table class = "table table-striped">
    <thead>
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Access Token</th>
        <th>Grade</th>
        <th>Action<th>
    </tr>
    </thead>
    <tbody>
<% @student.each do |stu| %>
    <% if stu.teacher_id == current_teacher.id%>
            <tr>
                <td><%= stu.name %></td>
                <td><%= stu.email%></td>
                <td><%= stu.access_token %></td>
                <td><%= link_to "Grade: ", gradestudent_path(:id => stu.id), :class => "btn btn-link" %><%= stu.grade %></td>
                <td><%= link_to "Remove", removeStudents_path(id: stu.id), :class => "btn btn-link"%></td>
            </tr>
    <% end %>
<% end %>
    </tbody>
</table>
<br>
<%= link_to "Add Students",new_student_path,:class => "btn btn-primary",:method => :get %>
<br>
<%= link_to 'Back To Menu', current_teacher, class: "btn btn-default glyphicon glyphicon-menu-left"%>
