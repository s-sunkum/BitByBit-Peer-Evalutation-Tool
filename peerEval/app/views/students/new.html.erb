
<%# Form for teacher to create a student %>
<h1>Create Student</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @student, local: true, class: "form-group") do |f| %>
      <%= render 'shared/error_messages_student' %>
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :access_token %>
      <%= f.text_field :access_token, class: "form-control" %>

      <%= f.submit "Create Student Account", class: "btn btn-primary" %>
      <br>
      <br>
      <%= link_to 'Back to Menu', current_teacher, class: "btn btn-default glyphicon glyphicon-menu-left"%>
    <% end %>
  </div>
</div>