<% provide(:title, 'Create A Project') %>
<h1>Create A Project</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @project, local: true) do |f| %>
      <%#= render 'shared/error_messages_project' %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <p> <b>Team: </b></p>
      <%= f.select :team_id, @teams.map { |t| [t.name, t.id] }%>
      <%= f.submit "Create Project", class: "btn btn-primary" %>
    <% end %>
    <br>
    <%= link_to 'Back to Menu', current_teacher, class: "btn btn-primary" %>
  </div>
</div>


